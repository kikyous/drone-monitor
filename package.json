{
	"name": "drone-monitor",
	"displayName": "Drone Monitor",
	"description": "Show last drone build status in status bar",
	"version": "0.0.3",
	"publisher": "kikyous",
	"icon": "res/logo.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/kikyous/drone-monitor"
	},
	"bugs": {
		"url": "https://github.com/kikyous/drone-monitor/issues"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"extensionDependencies": [
		"vscode.git"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:.drone.yml"
	],
	"contributes": {
		"configuration": {
			"title": "Drone Monitor",
			"properties": {
				"droneMonitor.server": {
					"type": "string",
					"description": "Drone server url"
				},
				"droneMonitor.token": {
					"type": "string",
					"description": "Your personal token"
				},
				"droneMonitor.interval": {
					"type": "number",
					"description": "Interval in seconds to check for new builds",
					"default": 5
				}
			}
		},
		"commands": [
			{
				"command": "drone.openInBrowser",
				"title": "DroneMonitor: Open `build` in browser"
			}
		]
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run package",
		"dev": "webpack --mode development --devtool source-map --watch ",
		"package": "webpack --mode production",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/node": "^17.0.35",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"node-fetch": "3.2.4",
		"s-ago": "^2.2.0"
	}
}