{
	"name": "drone-monitor",
	"displayName": "Drone Monitor",
	"description": "Show last drone build status in status bar",
	"version": "0.0.1",
	"publisher": "kikyous",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-extension-samples/issues"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:.drone.yml"
	],
	"contributes": {
		"configuration": {
			"title": "Drone Monitor Configuration",
			"properties": {
				"droneMonitorSetting": {
					"type": "object",
					"description": "Drone Monitor Configuration",
					"properties": {
						"droneServer": {
							"type": "string",
							"description": "drone server url"
						},
						"droneToken": {
							"type": "string",
							"description": "your personal token"
						},
						"interval": {
							"type": "number",
							"description": "Interval in seconds to check for new builds",
							"default": 5
						}
					}
				}
			}
		},
		"commands": [
			{
				"command": "drone.openInBrowser",
				"title": "DroneMonitor: Open `build` in browser"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@tsconfig/node16": "^1.0.2",
		"@types/node": "^17.0.35",
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"typescript": "^4.7.2"
	},
	"dependencies": {
		"@types/node-fetch": "^2.6.1",
		"node-fetch": "2",
		"s-ago": "^2.2.0"
	}
}